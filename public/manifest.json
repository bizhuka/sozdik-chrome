{
  "manifest_version": 3,
  "name": "Sozdik.kz",
  "version": "1.2",
  "description": "Sozdik.kz",
  "icons": {
    "192": "icon.png"
  },
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "commands": {
    "sozdik_popup": {
       "description": "Sozdik.kz popup",
       "suggested_key": {
          "default": "Alt+Z"
       }
    },
    "sozdik_side_panel": {
       "description": "Sozdik.kz side panel",
       "suggested_key": {
          "default": "Alt+X"
       }
    }
 },
  "sidebar_action": {
    "default_icon": "icon.png",
    "default_title": "sozdik.kz",
    "default_panel": "sidepanel.html"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://sozdik.kz/"
  ],
  "permissions": [
    "scripting",
    "windows",
    "tabs",
    "activeTab",
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  }
}
